{
  "name": "template",
  "version": "4.2.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "prettier --check . --plugin=prettier-plugin-astro",
    "format": "prettier --write . --plugin=prettier-plugin-astro",
    "cz": "cz",
    "prepare": "husky install",
    "lint": "eslint .",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "podcast:generate": "uv run podcast-generate --all",
    "podcast:generate:force": "uv run podcast-generate --all --force",
    "podcast:generate:one": "uv run podcast-generate --posts",
    "podcast:dry-run": "uv run podcast-generate --all --dry-run",
    "podcast:help": "uv run podcast-generate --help"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.14",
    "@resvg/resvg-js": "^2.6.2",
    "astro": "^5.16.9",
    "dotenv": "^17.2.3",
    "fuse.js": "^7.1.0",
    "github-slugger": "^2.0.0",
    "mermaid": "^11.12.2",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "rss": "^1.2.2",
    "satori": "^0.18.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.6.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.7",
    "@types/react": "^19.2.8",
    "@types/rss": "^0.0.32",
    "@typescript-eslint/parser": "^8.52.0",
    "astro-eslint-parser": "^1.2.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tsx": "^4.21.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx,json,astro}": [
      "prettier --write --plugin=prettier-plugin-astro"
    ]
  }
}
