---
import { defaultLocale, type Locale } from "@i18n/config";
// Determine locale and base prefix
const isZh = Astro.url.pathname.startsWith("/zh-hant/");
const lang: Locale = isZh ? ("zh-hant" as Locale) : (defaultLocale as Locale);
const base = isZh ? "/zh-hant" : "";

// Remove current url path and trailing slash if exists
const currentUrlPath = Astro.url.pathname.replace(/\/+$/, "");

// Get url array from path (strip leading slash and optional locale segment)
// eg: /zh-hant/tags/tailwindcss => ['tags', 'tailwindcss']
const pathParts = currentUrlPath.split("/").slice(1);
const breadcrumbList =
  isZh && pathParts[0] === "zh-hant" ? pathParts.slice(1) : pathParts;

// Localize Posts pagination crumb
if (breadcrumbList[0] === "posts") {
  const pageNum = breadcrumbList[1] || 1;
  breadcrumbList.splice(
    0,
    2,
    `${lang === "zh-hant" ? "文章" : "Posts"} (page ${pageNum})`
  );
}

// Localize Tags pagination crumb
if (breadcrumbList[0] === "tags" && !isNaN(Number(breadcrumbList[2]))) {
  const pageStr =
    Number(breadcrumbList[2]) === 1 ? "" : `(page ${breadcrumbList[2]})`;
  breadcrumbList.splice(1, 3, `${breadcrumbList[1]} ${pageStr}`);
}
---

<nav class="breadcrumb" aria-label="breadcrumb">
  <ul>
    <li>
      <a href={`${base}/`}>{lang === "zh-hant" ? "首頁" : "Home"}</a>
      <span aria-hidden="true">&raquo;</span>
    </li>
    {
      breadcrumbList.map((breadcrumb, index) =>
        index + 1 === breadcrumbList.length ? (
          <li>
            <span
              class={`${index > 0 ? "lowercase" : "capitalize"}`}
              aria-current="page"
            >
              {/* make the last part lowercase in Home > Tags > some-tag */}
              {decodeURIComponent(breadcrumb)}
            </span>
          </li>
        ) : (
          <li>
            <a href={`${base}/${breadcrumb}/`}>{breadcrumb}</a>
            <span aria-hidden="true">&raquo;</span>
          </li>
        )
      )
    }
  </ul>
</nav>

<style>
  .breadcrumb {
    @apply mx-auto mb-1 mt-8 w-full max-w-3xl px-4;
  }
  .breadcrumb ul li {
    @apply inline;
  }
  .breadcrumb ul li a {
    @apply capitalize opacity-70;
  }
  .breadcrumb ul li span {
    @apply opacity-70;
  }
  .breadcrumb ul li:not(:last-child) a {
    @apply hover:opacity-100;
  }
</style>
