              <li>{t.profolio.tech.typescriptNodejs}</li>
              <li>{t.profolio.tech.sqliteWasm}</li>
              <li>{t.profolio.tech.mcpServer}</li>
            </ul>
          </div>
          <p class="mt-2 text-sm">
            {t.toolbox.common.source}
