---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import { defaultLocale, type Locale } from "@i18n/config";
// Infer locale from the requested path so 404s under /zh-hant/ are localized
const lang: Locale = Astro.url.pathname.startsWith("/zh-hant/")
  ? ("zh-hant" as Locale)
  : (defaultLocale as Locale);
---

<Layout title={`404 Not Found | ${SITE.title}`} lang={lang}>
  <Header {lang} />

  <main
    id="main-content"
    class="mx-auto flex max-w-3xl flex-1 items-center justify-center"
  >
    <div
      class="not-found-wrapper mb-14 flex flex-col items-center justify-center"
    >
      <h1
        class="text-9xl font-bold text-skin-accent"
        aria-label="404 Not Found"
      >
        404
      </h1>
      <span aria-hidden="true">¯\_(ツ)_/¯</span>
      <p class="mt-4 text-2xl sm:text-3xl">
        {lang === "zh-hant" ? "找不到頁面" : "Page Not Found"}
      </p>
      <LinkButton
        href={lang === "zh-hant" ? "/zh-hant/" : "/"}
        className="my-6 text-lg underline decoration-dashed underline-offset-8"
      >
        {lang === "zh-hant" ? "回到首頁" : "Go back home"}
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>
