---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import { defaultLocale, type Locale } from "@i18n/config";
// Infer locale from the requested path so 404s under /zh-hant/ are localized
const lang: Locale = Astro.url.pathname.startsWith("/zh-hant/")
  ? ("zh-hant" as Locale)
  : (defaultLocale as Locale);
---

<Layout title={`404 Not Found | ${SITE.title}`} lang={lang}>
  <Header {lang} />

  <main id="main-content">
    <div class="not-found-wrapper">
      <h1 aria-label="404 Not Found">404</h1>
      <span aria-hidden="true">¯\_(ツ)_/¯</span>
      <p>{lang === "zh-hant" ? "找不到頁面" : "Page Not Found"}</p>
      <LinkButton
        href={lang === "zh-hant" ? "/zh-hant/" : "/"}
        className="my-6 text-lg underline decoration-dashed underline-offset-8"
      >
        {lang === "zh-hant" ? "回到首頁" : "Go back home"}
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  #main-content {
    @apply mx-auto flex max-w-3xl flex-1 items-center justify-center;
  }
  .not-found-wrapper {
    @apply mb-14 flex flex-col items-center justify-center;
  }
  .not-found-wrapper h1 {
    @apply text-9xl font-bold text-skin-accent;
  }
  .not-found-wrapper p {
    @apply mt-4 text-2xl sm:text-3xl;
  }
</style>
