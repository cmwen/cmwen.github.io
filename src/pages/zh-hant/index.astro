---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import getSortedPosts from "@utils/getSortedPosts";
import { messages } from "@i18n/dict";
import type { CollectionEntry } from "astro:content";

const lang = "zh-hant" as const;
const t = messages[lang];

const allPosts = await getCollection("blog");
const posts = allPosts.filter(
  (p: CollectionEntry<"blog">) => p.data.lang === lang
);

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);

const canonical = new URL(Astro.url.pathname, Astro.site).href;
---

<Layout
  lang={lang}
  alternates={{ en: new URL(`/`, Astro.site).href, "zh-hant": canonical }}
>
  <Header {lang} />
  <main id="main-content">
    <section id="hero" class="pb-6 pt-8">
      <h1 class="my-4 inline-block text-3xl font-bold sm:my-8 sm:text-5xl">
        關於 Min
      </h1>
      <a
        target="_blank"
        href="/zh-hant/rss.xml"
        class="rss-link mb-6"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="rss-icon mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125"
          ><path
            d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
          ></path><path
            d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
          ></path><circle cx="6" cy="18" r="2"></circle>
        </svg>
        <span class="sr-only">RSS Feed</span>
      </a>

      <p class="my-2">
        積極主動的技術主管，善於主導與推動成果。熱衷於分享知識、提升生產力並啟發他人；以務實的方式解題、打造高效解法，重視團隊透明溝通。樂於迎接挑戰並持續優化流程。
      </p>
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pb-6 pt-12">
            <h2 class="text-2xl font-semibold tracking-wide">
              {t.common.featured}
            </h2>
            <ul>
              {featuredPosts.map(({ data, slug }) => (
                <Card
                  href={`/zh-hant/posts/${(data as any).baseSlug ?? slug}/`}
                  frontmatter={data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pb-6 pt-12">
          <h2 class="text-2xl font-semibold tracking-wide">
            {t.common.recentPosts}
          </h2>
          <ul>
            {recentPosts.map(
              ({ data, slug }, index) =>
                index < 4 && (
                  <Card
                    href={`/zh-hant/posts/${(data as any).baseSlug ?? slug}/`}
                    frontmatter={data}
                    secHeading={false}
                  />
                )
            )}
          </ul>
        </section>
      )
    }

    <div class="all-posts-btn-wrapper my-8 text-center">
      <LinkButton href="/zh-hant/posts/">
        {t.common.allPosts}
        <svg xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
          ></path>
        </svg>
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>
