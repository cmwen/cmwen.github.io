---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Main from "@layouts/Main.astro";
import MindMapsApp from "@components/mindmaps/MindMapsApp";
import { SITE } from "@config";
import { defaultLocale, type Locale } from "@i18n/config";

const lang: Locale = defaultLocale;
const title = "Mind Maps";
const description =
  "Explore technical topics through interactive mind maps with expand/collapse and detailed notes.";

const entries = await getCollection("mindmaps");
const mindmaps = entries.map(entry => ({
  slug: entry.id,
  title: entry.data.title,
  description: entry.data.description,
  tags: entry.data.tags,
  updatedAt: entry.data.updatedAt,
}));
---

<Layout
  title={`${title} | ${SITE.title}`}
  lang={lang}
  alternates={{
    en: new URL("/toolbox/mindmaps/", Astro.site).href,
    "zh-hant": new URL("/zh-hant/toolbox/mindmaps/", Astro.site).href,
  }}
>
  <Header activeNav="toolbox" activeSubNav="mindmaps" lang={lang} />
  <Main pageTitle={title} pageDesc={description}>
    <MindMapsApp mindmaps={mindmaps} basePath="/toolbox/mindmaps" client:load />
  </Main>
  <Footer />
</Layout>
