---
import { type CollectionEntry } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Card from "@components/Card";
import Pagination from "@components/Pagination.astro";
import { SITE } from "@config";
import { defaultLocale, type Locale } from "@i18n/config";

export interface Props {
  currentPage: number;
  totalPages: number;
  paginatedPosts: CollectionEntry<"blog">[];
  tag: string;
  tagName: string;
  lang?: Locale;
}

const {
  currentPage,
  totalPages,
  paginatedPosts,
  tag,
  tagName,
  lang = defaultLocale,
} = Astro.props;
const base = lang === "zh-hant" ? "/zh-hant" : "";
const canonical = new URL(Astro.url.pathname, Astro.site).href;
---

<Layout
  title={`${lang === "zh-hant" ? "標籤" : "Tag"}: ${tagName} | ${SITE.title}`}
  lang={lang}
  alternates={{
    en: base
      ? new URL(Astro.url.pathname.replace(/^\/zh-hant/, ""), Astro.site).href
      : canonical,
    "zh-hant": base
      ? canonical
      : new URL(`/zh-hant${Astro.url.pathname}`, Astro.site).href,
  }}
>
  <Header activeNav="tags" {lang} />
  <Main
    pageTitle={[`${lang === "zh-hant" ? "標籤" : "Tag"}:`, `${tagName}`]}
    titleTransition={tag}
    pageDesc={lang === "zh-hant"
      ? `含有「${tagName}」標籤的所有文章。`
      : `All the articles with the tag "${tagName}".`}
  >
    <h1 slot="title" transition:name={tag}>{`Tag:${tag}`}</h1>
    <ul>
      {
        paginatedPosts.map(({ data, slug }) => (
          <Card href={`${base}/posts/${slug}/`} frontmatter={data} />
        ))
      }
    </ul>
  </Main>

  <Pagination
    {currentPage}
    {totalPages}
    prevUrl={`${base}/tags/${tag}${
      currentPage - 1 !== 1 ? "/" + (currentPage - 1) : ""
    }/`}
    nextUrl={`${base}/tags/${tag}/${currentPage + 1}/`}
  />

  <Footer noMarginTop={totalPages > 1} />
</Layout>
